<h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username, autofocus: true, autocomplete: "off" %>
  </div>


  <div class="field">
    <%= f.label :status %><br /> 
    <%= f.select :status, options_for_select([['qualified', "qualified"], ['not qualified', "not qualified"], ['banned', "banned"]]) , {:prompt => "--select status--"}%>
  </div>

  <div class="field">
  <%= f.fields_for :expert_fields, OpenStruct.new(f.object.expert_fields) do |p| %>
      <%= p.label :profession %>
      <%= p.text_field :profession %>
  <% end %>
  </div>

  <div class="field">
  <%= f.fields_for :expert_fields, OpenStruct.new(f.object.expert_fields) do |p| %>
      <%= p.label :service %>
      <%= p.text_field :service %>
  <% end %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "experts/shared/links" %>
